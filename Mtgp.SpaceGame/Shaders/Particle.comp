struct Input
{
    [WorkgroupId] int workgroupId;
}

[Binding=0] uniform vec<int,2> currentParticles;
[Binding=1] uniform vec<int,2> newParticles;

func void Main(Input input)
{
    var vec<int,2> particle;
    particle = currentParticles[input.workgroupId];
    newParticles[input.workgroupId] = Vec(particle.x + 1, particle.y);
}